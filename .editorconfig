# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
tab_width = 4

[*.{yml,yaml,hpp,h,cpp,c}]
indent_style = space
indent_size = 2
tab_width = 2

[LICENSE]
insert_final_newline = false


[*.{diff,patch}]
trim_trailing_whitespace = false
